@startuml
autonumber
skinparam Style strictuml

participant "User Request" as U
participant "FavoriteListView" as V
participant "Favorite" as M

U -> V: GET /favorites/
activate V

V -> M: Favorite.objects.filter(user=self.request.user)
activate M
M --> V: return filtered favorites
deactivate M

V -> M: Favorite.objects.select_related('venue')
activate M
M --> V: return favorites with venue
deactivate M

V -> M: Favorite.objects.order_by('-created_at')
activate M
M --> V: return sorted favorites
deactivate M

V --> U: return response
deactivate V
@enduml